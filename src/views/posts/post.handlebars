<h2>{{post.title}}</h2>

{{#if post.content}}{{#forEach post.content}}
    {{#eq type "markdown"}}
        {{#markdown}}{{data}}{{/markdown}}
    {{/eq}}
    {{#eq type "upload"}}
        {{#eq data.type "image"}}
            <img src="/upload/{{data.path}}" alt="{{data.description}}">
        {{/eq}}
    {{/eq}}
{{/forEach}}{{else}}
<h3>Post is Empty</h3>
{{/if}}