<form action="/upload" method="post" id="form" enctype="multipart/form-data">
    <h2>Upload Files</h2>
    <input type="file" name="media" multiple>
    <button type="submit" id="submit">Submit</button>
</form>

<article>
    <header>
        <h2>Stored Uploads</h2>
    </header>
    {{#if page.posts}}<div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(250px, 1fr)); column-gap: 2vw; row-gap: 3vh;">
        {{#forEach page.posts}}
        <section class="list-elem" style="display: flex; flex-direction: column; justify-content: space-between; background-color: whitesmoke;" upload-id="{{id}}">
            <img src="{{url}}" alt="{{description}}" style="width: 100%; max-width: 100%;">
            <div>
                {{#if linked}}<p>Linked to posts</p>{{/if}}
                <button class="button-delete">Delete</button>
            </div>
        </section>
    {{/forEach}}
    </div>{{/if}}
</article>