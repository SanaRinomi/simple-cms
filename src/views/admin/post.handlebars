<article id="post-container">
{{#if post.content}}{{#forEach post.content}}
    <section class="loaded" section-type="{{{type}}}" {{#if id}}content-id="{{{id}}}"{{/if}}>{{{data}}}</section>
{{/forEach}}{{/if}}
</article>

<form action="" id="section-select">
    <select name="section-type" id="s-sect-type">
        <option value="text">Text</option>
        <option value="img">Image</option>
    </select>
    <button type="submit" id="s-create">Create</button>
</form>

<button type="submit" id="post-submit">Update Post</button>